<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="76dp"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_add_info_title"
        style="@style/FontTheme.R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="-0.59"
        android:textColor="@color/colorDarkBlack"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_add_info_input"
        style="@style/FontTheme.L"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:gravity="center_horizontal"
        android:inputType="text"
        android:letterSpacing="-0.44"
        android:maxLines="1"
        android:textColorHint="@color/colorBrightGray00"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_add_info_explanation"
        style="@style/FontTheme.L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:letterSpacing="-0.02"
        android:text="필수 입력사항입니다"
        android:textColor="@color/colorBrightGray02"
        android:textSize="14sp" />

</LinearLayout>