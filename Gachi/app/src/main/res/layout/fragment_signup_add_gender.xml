<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="76dp"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_add_info_title"
        style="@style/FontTheme.R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="-0.59"
        android:textColor="@color/colorDarkBlack"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="106dp"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gender_male"
            style="@style/FontTheme.R"
            android:layout_width="142dp"
            android:layout_height="54dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/selector_gender_rectangle"
            android:gravity="center"
            android:letterSpacing="-0.02"
            android:text="@string/male"
            android:textColor="@color/colorBrightGray00"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_gender_female"
            style="@style/FontTheme.R"
            android:layout_width="142dp"
            android:layout_height="54dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/selector_gender_rectangle"
            android:gravity="center"
            android:letterSpacing="-0.02"
            android:text="@string/female"
            android:textColor="@color/colorBrightGray00"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>