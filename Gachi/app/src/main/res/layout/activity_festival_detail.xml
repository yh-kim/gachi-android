<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_festival_blur_background"
                    android:layout_width="match_parent"
                    android:layout_height="170dp" />
                <!-- 블러 끝 -->

                <LinearLayout
                    android:id="@+id/ll_festival_detail_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="74dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <ImageView
                        android:id="@+id/iv_festival_detail"
                        android:layout_width="86dp"
                        android:layout_height="125dp"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_marginLeft="21dp"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_festival_detail_date"
                            style="@style/FontTheme.M"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_festival_detail_title"
                            style="@style/FontTheme.M"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="13dp"
                            android:layout_marginTop="4dp"
                            android:letterSpacing="-0.04"
                            android:lineSpacingExtra="6sp"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop="13dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                            style="@style/FontTheme.M"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_text_rectangle"
                            android:paddingLeft="9dp"
                            android:paddingRight="9dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:letterSpacing="-0.02"
                            android:text="#ROCK"
                            android:textColor="@color/colorWhite"
                            android:textSize="10sp" />

                            <TextView
                                style="@style/FontTheme.M"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:background="@drawable/background_text_rectangle"
                                android:paddingLeft="9dp"
                                android:paddingRight="9dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:letterSpacing="-0.02"
                                android:text="#서울특별시"
                                android:textColor="@color/colorWhite"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!-- 페스티벌 기간, 제목-->

                </LinearLayout>
                <!-- 페스티벌 이미지와 정보-->

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="29dp"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingRight="20dp">

                    <TextView
                        style="@style/FontTheme.B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.54"
                        android:text="Info"
                        android:textColor="@color/colorDarkBlack"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_festival_detail_detail"
                        style="@style/FontTheme.L"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:letterSpacing="-0.39"
                        android:textColor="@color/colorBrightGray01"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_festival_detail_info_more"
                        style="@style/FontTheme.L"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="13dp"
                        android:letterSpacing="-0.04"
                        android:text="View more"
                        android:textColor="@color/colorBrightGray03"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </LinearLayout>
                <!-- 정보 -->

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="27dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/line_divider" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="20dp">

                    <TextView
                        style="@style/FontTheme.B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.54"
                        android:text="LINE UP"
                        android:textColor="@color/colorDarkBlack"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_festival_detail_lineup"
                        style="@style/FontTheme.L"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:letterSpacing="-0.39"
                        android:textColor="@color/colorBrightGray01"
                        android:textSize="16sp" />
                </LinearLayout>
                <!-- 라인업 -->

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/line_divider" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/FontTheme.B"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:letterSpacing="-0.54"
                            android:text="GACHI"
                            android:textColor="@color/colorDarkBlack"
                            android:textSize="22sp" />

                        <TextView
                            style="@style/FontTheme.L"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:letterSpacing="-0.49"
                            android:text="View all >"
                            android:textColor="#222222"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_festival_gachi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        android:layout_marginTop="32dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:overScrollMode="never" />
                </LinearLayout>
                <!-- 대화방 -->

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/festival_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:minHeight="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways" />
    </android.support.design.widget.AppBarLayout>
</android.support.design.widget.CoordinatorLayout>