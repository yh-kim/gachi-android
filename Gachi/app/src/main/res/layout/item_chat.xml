<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="21dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="21dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_chat_thumbnail"
        android:layout_width="66dp"
        android:layout_height="66dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_chat_title"
            style="@style/FontTheme.B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.63"
            android:textColor="@color/colorDarkBlack"
            android:textSize="14sp" />

        <TextView
            style="@style/FontTheme.R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:text="님들 어디신지.."
            android:textColor="@color/colorBrightGray00"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/FontTheme.M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff164f"
            android:letterSpacing="-0.02"
            android:text="300 +"
            android:textColor="@color/colorWhite"
            android:textSize="10sp" />

